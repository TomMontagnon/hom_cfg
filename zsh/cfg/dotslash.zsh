#################### Functions ########################

zshbind_dotslash() {
	LBUFFER+=.
	echo $LBUFFER|grep -Eq '[ /]\.{2}.*$'
	[[ $? -ne 0 ]] && return

	lastchars=$(echo -n $LBUFFER|rev|cut -c1-2)
	[[ $lastchars = '..' ]] && LBUFFER+=/
}

#######################################################
#################### zle  #############################

zle -N dotslash zshbind_dotslash

#######################################################
#################### Keybindings ######################

bindkey . dotslash

